[Unit]
	Description=uWSGI instance to service OpenPRRO close shifts sheduler

[Service]
	Restart = always
	RestartSec = 180
	ExecStart=/usr/bin/bash -c 'cd /home/signer-agent/py-signer/; source venv/bin/activate; python3.9 manage_data.py close_shifts'

[Install]
	WantedBy=multi-user.target
